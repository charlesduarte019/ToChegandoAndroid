<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E0F7FA"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.eti.c019.tochegando.ChegandoActivity"
    tools:showIn="@layout/activity_chegando">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Filhos:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/listaFilhos"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/scrollView"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Tempo:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/chegando_bt_5min"
                    android:layout_width="fill_parent"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    android:backgroundTint="#B2EBF2"
                    android:text="@string/sChegando_button_5min"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/chegando_bt_10min"
                    android:layout_width="fill_parent"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    android:backgroundTint="#B2EBF2"
                    android:text="@string/sChegando_button_10min"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/chegando_bt_15min"
                    android:layout_width="fill_parent"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    android:backgroundTint="#B2EBF2"
                    android:text="@string/sChegando_button_15min"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/chegando_bt_20min"
                    android:layout_width="fill_parent"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    android:backgroundTint="#B2EBF2"
                    android:text="@string/sChegando_button_20min"
                    android:textSize="25dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>